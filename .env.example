# copy to .env and edit as needed

# Django Configuration
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL Configuration (optional, defaults to SQLite)
# POSTGRES_DB=nomisafe
# POSTGRES_USER=nomisafe_user
# POSTGRES_PASSWORD=your_secure_password
# POSTGRES_HOST=db
# POSTGRES_PORT=5432

# AWS S3 Configuration for Policy Documents
# Set to True to enable S3 storage, False for local storage
USE_S3_STORAGE=False

# AWS Credentials (Required when USE_S3_STORAGE=True)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# S3 Bucket Configuration
# For development
AWS_STORAGE_BUCKET_NAME=nomisafe-policies-dev
# For production (change the bucket name in your production .env)
# AWS_STORAGE_BUCKET_NAME=nomisafe-policies-prod

# AWS Region
AWS_S3_REGION_NAME=us-east-1

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key

# SMS provider: twilio or textbelt
SMS_PROVIDER=twilio

# Twilio credentials
TWILIO_ACCOUNT_SID=your_sid
TWILIO_AUTH_TOKEN=your_token
TWILIO_FROM_NUMBER=+1555XXXXXXX

